{
    "name": "antimattr/search",
    "type": "library",
    "description": "Searching for Algolia, Google Custom Search Engine",
    "keywords": ["algolia", "antimattr", "google", "search"],
    "homepage": "http://github.com/antimattr/search",
    "license": "MIT",
    "authors": [
        {"name": "Matthew Fitzgerald", "email": "matthewfitz@gmail.com"}
    ],
    "require": {
        "php": ">=5.3.2",
        "antimattr/common-pagination": "dev-master",        
        "doctrine/collections": "1.*",
        "symfony/event-dispatcher": "2.5.*@dev"             
    },
    "require-dev": {
        "antimattr/test-case": "~1.0@stable",
        "phpunit/phpunit": "~4.0",
        "fabpot/php-cs-fixer": "v0.5.7"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-0": {
            "AntiMattr\\Search\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": { 
            "AntiMattr\\TestCase\\": "vendor/antimattr/test-case/src",
            "AntiMattr\\Tests\\Search\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "archive": {
        "exclude": ["bin", "tests", "*phpunit.xml"]
    }
}
